<project
  xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.github.lstephen</groupId>
    <artifactId>basepom-java-rspec</artifactId>
    <version>1.14</version>
  </parent>

  <artifactId>ootp-ai</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>ootp-ai</name>
  <description>AI for OOTP</description>
  <url>${github.site}</url>

  <scm>
    <connection>scm:git:git@github.com:lstpehen/ootp-ai.git</connection>
    <developerConnection>scm:git:git@github.com:lstephen/ootp-ai.git</developerConnection>
    <url>${github.url}</url>
  </scm>

  <properties>
    <scala.target>jvm-1.${java.version}</scala.target>

    <lib.ai-search.version>1.2</lib.ai-search.version>
    <lib.commons-io.version>2.4</lib.commons-io.version>
    <lib.commons-lang3.version>3.4</lib.commons-lang3.version>
    <lib.commons-math3.version>3.5</lib.commons-math3.version>
    <lib.jackson.version>2.6.0</lib.jackson.version>
    <lib.joda-time.version>2.8.1</lib.joda-time.version>
    <lib.jsr305.version>2.0.2</lib.jsr305.version>
    <lib.guava.version>18.0</lib.guava.version>
    <lib.guava-retrying.version>2.0.0</lib.guava-retrying.version>
    <lib.humanize-slim.version>1.2.2</lib.humanize-slim.version>
    <lib.scala-library.version>2.11.7</lib.scala-library.version>

    <!-- Upgrading JSoup 1.7.x -> 1.8.x is a breaking change -->
    <lib.jsoup.version>1.7.3</lib.jsoup.version>

    <gem.rspec-its.version>1.2.0</gem.rspec-its.version>

    <plugin.exec.version>1.4.0</plugin.exec.version>
    <plugin.scala.version>3.2.2</plugin.scala.version>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.scala-lang</groupId>
      <artifactId>scala-library</artifactId>
      <version>${lib.scala-library.version}</version>
    </dependency>

    <dependency>
      <groupId>com.github.lstephen</groupId>
      <artifactId>ai-search</artifactId>
      <version>${lib.ai-search.version}</version>
    </dependency>

    <dependency>
      <groupId>org.jsoup</groupId>
      <artifactId>jsoup</artifactId>
      <version>${lib.jsoup.version}</version>
    </dependency>

    <dependency>
      <groupId>com.google.guava</groupId>
      <artifactId>guava</artifactId>
      <version>${lib.guava.version}</version>
    </dependency>

    <dependency>
      <groupId>com.github.rholder</groupId>
      <artifactId>guava-retrying</artifactId>
      <version>${lib.guava-retrying.version}</version>
    </dependency>

    <dependency>
      <groupId>commons-io</groupId>
      <artifactId>commons-io</artifactId>
      <version>${lib.commons-io.version}</version>
    </dependency>

    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-lang3</artifactId>
      <version>${lib.commons-lang3.version}</version>
    </dependency>

    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-math3</artifactId>
      <version>${lib.commons-math3.version}</version>
    </dependency>

    <dependency>
      <groupId>joda-time</groupId>
      <artifactId>joda-time</artifactId>
      <version>${lib.joda-time.version}</version>
    </dependency>

    <dependency>
      <groupId>com.fasterxml.jackson.core</groupId>
      <artifactId>jackson-annotations</artifactId>
      <version>${lib.jackson.version}</version>
    </dependency>

    <dependency>
      <groupId>com.fasterxml.jackson.core</groupId>
      <artifactId>jackson-core</artifactId>
      <version>${lib.jackson.version}</version>
    </dependency>

    <dependency>
      <groupId>com.fasterxml.jackson.core</groupId>
      <artifactId>jackson-databind</artifactId>
      <version>${lib.jackson.version}</version>
    </dependency>

    <dependency>
      <groupId>com.github.mfornos</groupId>
      <artifactId>humanize-slim</artifactId>
      <version>${lib.humanize-slim.version}</version>
      <exclusions>
        <exclusion>
          <groupId>com.google.code.findbugs</groupId>
          <artifactId>jsr305</artifactId>
        </exclusion>
      </exclusions>
    </dependency>

    <dependency>
      <groupId>com.google.code.findbugs</groupId>
      <artifactId>jsr305</artifactId>
      <version>${lib.jsr305.version}</version>
    </dependency>

    <dependency>
      <groupId>rubygems</groupId>
      <artifactId>rspec-its</artifactId>
      <version>${gem.rspec-its.version}</version>
      <type>gem</type>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>${plugin.exec.version}</version>
        <executions>
          <execution>
            <goals>
              <goal>java</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <mainClass>com.github.lstephen.ootp.ai.Main</mainClass>
        </configuration>
      </plugin>

      <plugin>
        <groupId>net.alchim31.maven</groupId>
        <artifactId>scala-maven-plugin</artifactId>
        <version>${plugin.scala.version}</version>
        <executions>
          <execution>
            <id>scala-compile-first</id>
            <phase>process-resources</phase>
            <goals>
              <goal>add-source</goal>
              <goal>compile</goal>
            </goals>
          </execution>
          <execution>
            <id>scala-test-compile</id>
            <phase>process-test-resources</phase>
            <goals>
              <goal>testCompile</goal>
            </goals>
          </execution>
          <execution>
            <id>attach-javadocs</id>
            <goals>
              <goal>doc-jar</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <args>
            <arg>-target:${scala.target}</arg>
          </args>
          <!--<javacArgs>
            <javacArg>-source</javacArg><javacArg>8</javacArg>
            <javacArg>-target</javacArg><javacArg>8</javacArg>
          </javacArgs>-->
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <reporting>
    <plugins>
      <plugin>
        <groupId>net.alchim31.maven</groupId>
        <artifactId>scala-maven-plugin</artifactId>
        <version>${plugin.scala.version}</version>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <reportSets>
          <reportSet>
            <reports/>
          </reportSet>
        </reportSets>
      </plugin>
    </plugins>
  </reporting>
</project>
