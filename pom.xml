<project
  xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.github.lstephen</groupId>
    <artifactId>basepom</artifactId>
    <version>1.9</version>
  </parent>

  <artifactId>ootp-ai</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>ootp-ai</name>
  <description>AI for OOTP</description>

  <scm>
    <connection>scm:git:git@github.com:lstpehen/ootp-ai.git</connection>
    <developerConnection>scm:git:git@github.com:lstephen/ootp-ai.git</developerConnection>
  </scm>

  <properties>
    <lib.ai-search.version>1.1</lib.ai-search.version>
    <lib.commons-lang3.version>3.1</lib.commons-lang3.version>
    <lib.commons-math3.version>3.2</lib.commons-math3.version>
    <lib.fest-assert-core.version>2.0M10</lib.fest-assert-core.version>
    <lib.fest-util.version>1.2.5</lib.fest-util.version>
    <lib.jackson.version>2.3.0</lib.jackson.version>
    <lib.joda-time.version>2.2</lib.joda-time.version>
    <lib.jsoup.version>1.7.3</lib.jsoup.version>
    <lib.jsr305.version>1.3.9</lib.jsr305.version>
    <lib.guava.version>15.0</lib.guava.version>
    <lib.humanize-slim.version>1.1.5</lib.humanize-slim.version>
    <lib.ootp-extract.version>1.0</lib.ootp-extract.version>

    <lib.assertj-core.version>3.0.0</lib.assertj-core.version>
    <lib.junit.version>4.12</lib.junit.version>

    <plugin.exec.version>1.2.1</plugin.exec.version>
  </properties>

  <dependencies>
    <dependency>
      <groupId>com.github.lstephen</groupId>
      <artifactId>ootp-extract</artifactId>
      <version>${lib.ootp-extract.version}</version>
    </dependency>

    <dependency>
      <groupId>com.github.lstephen</groupId>
      <artifactId>ai-search</artifactId>
      <version>${lib.ai-search.version}</version>
    </dependency>

    <dependency>
      <groupId>org.jsoup</groupId>
      <artifactId>jsoup</artifactId>
      <version>${lib.jsoup.version}</version>
    </dependency>

    <dependency>
      <groupId>com.google.guava</groupId>
      <artifactId>guava</artifactId>
      <version>${lib.guava.version}</version>
    </dependency>

    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-lang3</artifactId>
      <version>${lib.commons-lang3.version}</version>
    </dependency>

    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-math3</artifactId>
      <version>${lib.commons-math3.version}</version>
    </dependency>

    <dependency>
      <groupId>joda-time</groupId>
      <artifactId>joda-time</artifactId>
      <version>${lib.joda-time.version}</version>
    </dependency>

    <dependency>
      <groupId>com.fasterxml.jackson.core</groupId>
      <artifactId>jackson-annotations</artifactId>
      <version>${lib.jackson.version}</version>
    </dependency>

    <dependency>
      <groupId>com.fasterxml.jackson.core</groupId>
      <artifactId>jackson-core</artifactId>
      <version>${lib.jackson.version}</version>
    </dependency>

    <dependency>
      <groupId>com.fasterxml.jackson.core</groupId>
      <artifactId>jackson-databind</artifactId>
      <version>${lib.jackson.version}</version>
    </dependency>

    <dependency>
      <groupId>com.github.mfornos</groupId>
      <artifactId>humanize-slim</artifactId>
      <version>${lib.humanize-slim.version}</version>
    </dependency>

    <dependency>
      <groupId>org.easytesting</groupId>
      <artifactId>fest-assert-core</artifactId>
      <version>${lib.fest-assert-core.version}</version>
    </dependency>

    <dependency>
      <groupId>org.easytesting</groupId>
      <artifactId>fest-util</artifactId>
      <version>${lib.fest-util.version}</version>
    </dependency>

    <dependency>
      <groupId>com.google.code.findbugs</groupId>
      <artifactId>jsr305</artifactId>
      <version>${lib.jsr305.version}</version>
    </dependency>

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>${lib.junit.version}</version>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>org.assertj</groupId>
      <artifactId>assertj-core</artifactId>
      <version>${lib.assertj-core.version}</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>${plugin.exec.version}</version>
        <executions>
          <execution>
            <goals>
              <goal>java</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <mainClass>com.ljs.ootp.ai.Main</mainClass>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
