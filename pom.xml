<project
  xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.github.lstephen</groupId>
    <artifactId>basepom-java-rspec</artifactId>
    <version>1.14</version>
  </parent>

  <artifactId>ootp-ai</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>ootp-ai</name>
  <description>AI for OOTP</description>
  <url>${github.site}</url>

  <scm>
    <connection>scm:git:git@github.com:lstpehen/ootp-ai.git</connection>
    <developerConnection>scm:git:git@github.com:lstephen/ootp-ai.git</developerConnection>
    <url>${github.url}</url>
  </scm>

  <properties>
    <lib.ai-search.version>1.2</lib.ai-search.version>
    <lib.commons-io.version>2.4</lib.commons-io.version>
    <lib.commons-lang3.version>3.4</lib.commons-lang3.version>
    <lib.commons-math3.version>3.5</lib.commons-math3.version>
    <lib.jackson.version>2.6.0</lib.jackson.version>
    <lib.joda-time.version>2.8.1</lib.joda-time.version>
    <lib.jsoup.version>1.8.2</lib.jsoup.version>
    <lib.jsr305.version>2.0.2</lib.jsr305.version>
    <lib.guava.version>18.0</lib.guava.version>
    <lib.guava-retrying.version>2.0.0</lib.guava-retrying.version>
    <lib.humanize-slim.version>1.2.2</lib.humanize-slim.version>

    <plugin.exec.version>1.4.0</plugin.exec.version>
  </properties>

  <dependencies>
    <dependency>
      <groupId>com.github.lstephen</groupId>
      <artifactId>ai-search</artifactId>
      <version>${lib.ai-search.version}</version>
    </dependency>

    <dependency>
      <groupId>org.jsoup</groupId>
      <artifactId>jsoup</artifactId>
      <version>${lib.jsoup.version}</version>
    </dependency>

    <dependency>
      <groupId>com.google.guava</groupId>
      <artifactId>guava</artifactId>
      <version>${lib.guava.version}</version>
    </dependency>

    <dependency>
      <groupId>com.github.rholder</groupId>
      <artifactId>guava-retrying</artifactId>
      <version>${lib.guava-retrying.version}</version>
    </dependency>

    <dependency>
      <groupId>commons-io</groupId>
      <artifactId>commons-io</artifactId>
      <version>${lib.commons-io.version}</version>
    </dependency>

    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-lang3</artifactId>
      <version>${lib.commons-lang3.version}</version>
    </dependency>

    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-math3</artifactId>
      <version>${lib.commons-math3.version}</version>
    </dependency>

    <dependency>
      <groupId>joda-time</groupId>
      <artifactId>joda-time</artifactId>
      <version>${lib.joda-time.version}</version>
    </dependency>

    <dependency>
      <groupId>com.fasterxml.jackson.core</groupId>
      <artifactId>jackson-annotations</artifactId>
      <version>${lib.jackson.version}</version>
    </dependency>

    <dependency>
      <groupId>com.fasterxml.jackson.core</groupId>
      <artifactId>jackson-core</artifactId>
      <version>${lib.jackson.version}</version>
    </dependency>

    <dependency>
      <groupId>com.fasterxml.jackson.core</groupId>
      <artifactId>jackson-databind</artifactId>
      <version>${lib.jackson.version}</version>
    </dependency>

    <dependency>
      <groupId>com.github.mfornos</groupId>
      <artifactId>humanize-slim</artifactId>
      <version>${lib.humanize-slim.version}</version>
      <exclusions>
        <exclusion>
          <groupId>com.google.code.findbugs</groupId>
          <artifactId>jsr305</artifactId>
        </exclusion>
      </exclusions>
    </dependency>

    <dependency>
      <groupId>com.google.code.findbugs</groupId>
      <artifactId>jsr305</artifactId>
      <version>${lib.jsr305.version}</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>${plugin.exec.version}</version>
        <executions>
          <execution>
            <goals>
              <goal>java</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <mainClass>com.github.lstephen.ootp.ai.Main</mainClass>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
